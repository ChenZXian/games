<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.boot.ui.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/hud_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score 0"
                    android:textColor="@color/cst_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_best"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best 0"
                    android:textColor="@color/cst_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance 0"
                    android:textColor="@color/cst_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy 0"
                    android:textColor="@color/cst_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/panel_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed 1.0"
                    android:textColor="@color/cst_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_shield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shield Off"
                    android:textColor="@color/cst_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/btn_circle"
                android:contentDescription="Pause"
                android:scaleType="center"
                android:src="@android:drawable/ic_media_pause" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_jump"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/btn_action"
                android:text="Jump"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn_dash"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/btn_action_alt"
                android:text="Dash"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/overlay_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sky Relic Runner"
                android:textColor="@color/cst_text_primary"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hold Jump for height, tap Dash for phase burst"
                android:textColor="@color/cst_text_secondary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_action"
                android:text="@string/btn_start"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/overlay_pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paused"
                android:textColor="@color/cst_text_primary"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_resume"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_action"
                android:text="@string/btn_resume"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_restart_pause"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_action_alt"
                android:text="@string/btn_restart"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/overlay_game_over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run Complete"
                android:textColor="@color/cst_text_primary"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/text_final_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Score 0"
                android:textColor="@color/cst_text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_final_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Best 0"
                android:textColor="@color/cst_text_secondary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_restart_over"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_action"
                android:text="@string/btn_restart"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_back_menu"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_action_alt"
                android:text="Back to Menu"
                android:textColor="@color/cst_text_primary"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
