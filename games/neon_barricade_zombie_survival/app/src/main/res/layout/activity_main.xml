<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cst_bg_main">

  <com.android.boot.ui.GameView
      android:id="@+id/game_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <LinearLayout
      android:id="@+id/hud_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:orientation="vertical"
      android:padding="@dimen/cst_pad_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cst_hud_height"
        android:background="@drawable/ui_panel"
        android:orientation="horizontal"
        android:padding="@dimen/cst_pad_8">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/hud_hp_label"
            style="@style/TextAppearance.Game.HudLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cst_pad_10"
            android:background="@drawable/ui_meter_track">

          <View
              android:id="@+id/hud_hp_fill"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ui_meter_fill" />
        </FrameLayout>
      </LinearLayout>

      <Space
          android:layout_width="@dimen/cst_pad_12"
          android:layout_height="match_parent" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/hud_energy_label"
            style="@style/TextAppearance.Game.HudLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cst_pad_10"
            android:background="@drawable/ui_meter_track">

          <View
              android:id="@+id/hud_energy_fill"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ui_meter_fill" />
        </FrameLayout>
      </LinearLayout>

      <Space
          android:layout_width="@dimen/cst_pad_12"
          android:layout_height="match_parent" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="vertical">

        <TextView
            android:id="@+id/hud_time"
            style="@style/TextAppearance.Game.HudValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <TextView
            android:id="@+id/hud_kills"
            style="@style/TextAppearance.Game.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kills 0" />
      </LinearLayout>

      <Space
          android:layout_width="@dimen/cst_pad_12"
          android:layout_height="match_parent" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_pause"
            style="@style/Widget.Game.Button.Icon"
            android:layout_width="@dimen/cst_hud_icon_size"
            android:layout_height="@dimen/cst_hud_icon_size"
            android:contentDescription="Pause"
            android:src="@drawable/ic_pause" />

        <Space
            android:layout_width="@dimen/cst_pad_8"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_skill"
            style="@style/Widget.Game.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shock" />

        <Space
            android:layout_width="@dimen/cst_pad_8"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_aim_assist"
            style="@style/Widget.Game.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aim Assist: ON" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <!-- Right-side action cluster: shoot joystick rendered in GameEngine (bottom, level with left joystick) -->

  <LinearLayout
      android:id="@+id/bottom_items_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center_horizontal"
      android:orientation="horizontal"
      android:gravity="center"
      android:padding="@dimen/cst_pad_12"
      android:paddingBottom="200dp"
      android:background="@drawable/ui_panel">

    <!-- Wall item icon -->
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="@dimen/cst_pad_8">

      <ImageButton
          android:id="@+id/btn_place_wall"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/ui_button_secondary"
          android:src="@drawable/ic_wall"
          android:contentDescription="Place Wall"
          android:scaleType="fitCenter"
          android:padding="12dp" />

      <TextView
          android:id="@+id/wall_count"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="top|end"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:background="@drawable/ui_badge"
          android:gravity="center"
          android:text="3"
          android:textColor="#FFFFFF"
          android:textSize="11sp"
          android:textStyle="bold" />
    </FrameLayout>

    <!-- Mine item icon -->
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="@dimen/cst_pad_8">

      <ImageButton
          android:id="@+id/btn_place_mine"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/ui_button_secondary"
          android:src="@drawable/ic_mine"
          android:contentDescription="Place Mine"
          android:scaleType="fitCenter"
          android:padding="12dp" />

      <TextView
          android:id="@+id/mine_count"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="top|end"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:background="@drawable/ui_badge"
          android:gravity="center"
          android:text="3"
          android:textColor="#FFFFFF"
          android:textSize="11sp"
          android:textStyle="bold" />
    </FrameLayout>

    <!-- Weapon switch icon -->
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp">

      <ImageButton
          android:id="@+id/btn_weapon"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/ui_button_secondary"
          android:src="@drawable/ic_weapon"
          android:contentDescription="Switch Weapon"
          android:scaleType="fitCenter"
          android:padding="12dp" />

      <TextView
          android:id="@+id/weapon_count"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="top|end"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:background="@drawable/ui_badge"
          android:gravity="center"
          android:text="2"
          android:textColor="#FFFFFF"
          android:textSize="11sp"
          android:textStyle="bold" />
    </FrameLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:background="@drawable/ui_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_panel"
        android:orientation="vertical"
        android:padding="@dimen/cst_pad_20">

      <TextView
          style="@style/TextAppearance.Game.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Neon Barricade" />

      <TextView
          style="@style/TextAppearance.Game.Subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="Zombie Survival" />

      <Button
          android:id="@+id/btn_start"
          style="@style/Widget.Game.Button.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_16"
          android:text="@string/btn_start" />

      <Button
          android:id="@+id/btn_how_to_play"
          style="@style/Widget.Game.Button.Secondary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="@string/btn_how_to_play" />

      <Button
          android:id="@+id/btn_mute"
          style="@style/Widget.Game.Button.Secondary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="@string/btn_mute" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/pause_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      android:background="@drawable/ui_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_panel"
        android:orientation="vertical"
        android:padding="@dimen/cst_pad_20">

      <TextView
          style="@style/TextAppearance.Game.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Paused" />

      <Button
          android:id="@+id/btn_resume"
          style="@style/Widget.Game.Button.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_16"
          android:text="@string/btn_resume" />

      <Button
          android:id="@+id/btn_menu"
          style="@style/Widget.Game.Button.Secondary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="@string/btn_menu" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/upgrade_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      android:background="@drawable/ui_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_panel"
        android:orientation="vertical"
        android:padding="@dimen/cst_pad_20">

      <TextView
          style="@style/TextAppearance.Game.Subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Choose Upgrade" />

      <Button
          android:id="@+id/upgrade_option_1"
          style="@style/Widget.Game.Button.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_12"
          android:text="Option A" />

      <Button
          android:id="@+id/upgrade_option_2"
          style="@style/Widget.Game.Button.Secondary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="Option B" />

      <Button
          android:id="@+id/upgrade_option_3"
          style="@style/Widget.Game.Button.Secondary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="Option C" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/game_over_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      android:background="@drawable/ui_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_panel"
        android:orientation="vertical"
        android:padding="@dimen/cst_pad_20">

      <TextView
          style="@style/TextAppearance.Game.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Game Over" />

      <TextView
          android:id="@+id/game_over_stats"
          style="@style/TextAppearance.Game.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_8"
          android:text="" />

      <Button
          android:id="@+id/btn_restart"
          style="@style/Widget.Game.Button.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cst_pad_16"
          android:text="@string/btn_restart" />
    </LinearLayout>
  </LinearLayout>

</FrameLayout>
