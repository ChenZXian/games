<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cst_bg_main">

    <com.android.boot.core.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/hud_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/cst_hud_panel"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/cst_text_primary"
            android:textSize="18sp"
            android:text="Score: 0" />

        <TextView
            android:id="@+id/text_lives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/cst_text_primary"
            android:textSize="18sp"
            android:text="Lives: 3" />

        <TextView
            android:id="@+id/text_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/cst_text_primary"
            android:textSize="18sp"
            android:text="Energy: 100" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cst_text_primary"
            android:background="@color/cst_button_bg"
            android:text="@string/btn_pause" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/cst_menu_panel">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orbit Dodger"
            android:textColor="@color/cst_text_primary"
            android:textSize="32sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_start"
            android:textColor="@color/cst_text_primary"
            android:background="@color/cst_button_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pause_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/cst_menu_panel"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_paused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paused"
            android:textColor="@color/cst_text_primary"
            android:textSize="28sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_resume"
            android:textColor="@color/cst_text_primary"
            android:background="@color/cst_button_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_over_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/cst_menu_panel"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_game_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textColor="@color/cst_text_primary"
            android:textSize="28sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="@color/cst_text_primary"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_restart"
            android:textColor="@color/cst_text_primary"
            android:background="@color/cst_button_bg" />
    </LinearLayout>

</FrameLayout>
